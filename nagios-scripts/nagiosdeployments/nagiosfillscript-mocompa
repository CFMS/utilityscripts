#!/bin/bash
#update files generated by install scripts to include hostgroups

for I in {nodels compa}
do
touch /etc/nagios/nodes/compute-nodes/mocompa$I.cfg
cat << EOF > /etc/nagios/nodes/compute-nodes/mocompa$I.cfg

define host{
	use		compute-node
	host_name	mocompa$I
	alias		mocompa$I
	address		mocompa$I
	hostgroups	compute-a
}
EOF
done
