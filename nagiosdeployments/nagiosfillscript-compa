#!/bin/bash
#update files generated by install scripts to include hostgroups

for I in {nodels compa}
do
touch /etc/nagios/nodes/compute-nodes/compa$I.cfg
cat << EOF > /etc/nagios/nodes/compute-nodes/compa$I.cfg

define host{
	use		compute-node
	hostname	compa$I
	alias		compa$I
	address		compa$I
	hostgroups	compute-a
}
EOF
done
